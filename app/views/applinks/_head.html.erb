<% applinks_builder.ios do |app| %>
    <meta property="al:ios:url" content="<%= app.url %>"/>
    <% if app.app_store_id %>
        <meta property="al:ios:app_store_id" content="<%= app.app_store_id %>"/>
    <% end %>
    <% if app.app_name %>
        <meta property="al:ios:app_name" content="<%= app.app_name %>"/>
    <% end %>
<% end %>


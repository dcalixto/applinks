<% applinks_builder.web do |app| %>
    <% if app.url && app.should_fallback? %>
        <meta property="al:web:url" content="<%= app.url %>"/>
    <% end %>
    <% unless app.should_fallback? %>
        <meta property="al:web:should_fallback" content="false"/>
    <% end %>
<% end %>


